package siga

class Disciplina {
	String nome
	String ementa
	String periodo
		
    static constraints = {
		nome size: 2..20, unique:true, blank: false
		ementa minSize: 10, blank: false
		periodo inList:["Primeiro","Segundo","Terceiro","Quarto",
			"Quinto","Sexto","Setimo","Oitavo","Nono","Decimo"]
    }
	public String toString(){
		return nome;
	}
}